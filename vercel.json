{
  "buildCommand": "if [ -d apps/web ]; then cd apps/web; fi && npm run build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "if [ -d ../../apps ]; then cd ../.. && npm install; else npm install; fi",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://rentorgin-api.netlify.app/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
