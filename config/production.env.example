# PRODUCTION ENVIRONMENT CONFIGURATION
# ⚠️ NEVER commit actual production values to Git
# Use secret management service (AWS Secrets Manager, Vault, etc.)

# Database
DATABASE_URL="postgresql://user:password@prod-db.example.com:5432/rentorgin_prod?schema=public&connection_limit=20&pool_timeout=20"

# API
API_PORT=3001
API_URL=https://api.rentorgin.com

# Frontend
NEXT_PUBLIC_API_URL=https://api.rentorgin.com/api/v1

# Authentication (Use strong secrets!)
JWT_SECRET=CHANGE_ME_PRODUCTION_SECRET_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# OpenAI
OPENAI_API_KEY=sk-prod-your-openai-api-key

# Storage
STORAGE_PATH=/var/rentorgin/storage
MAX_UPLOAD_SIZE=52428800

# Email (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=SG.your-sendgrid-api-key
SMTP_FROM=noreply@rentorgin.com

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Application
APP_ENV=production
APP_VERSION=0.3.0
APP_NAME=RentOrgin
NODE_ENV=production

# Session
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET_32_CHARS

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
ALLOWED_ORIGINS=https://app.rentorgin.com,https://www.rentorgin.com

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30


















