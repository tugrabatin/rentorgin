# Backend API Environment Variables
# Copy this file to .env and fill in your values
# Railway/Render: Set these in platform dashboard â†’ Environment Variables

# Database (REQUIRED)
# PostgreSQL connection string
# Railway: Automatically provided as DATABASE_URL when PostgreSQL service is added
DATABASE_URL=postgresql://user:password@localhost:5432/rentorgin?schema=public

# API Configuration
# Railway/Render: PORT is automatically set by platform
API_PORT=3001
API_URL=http://localhost:3001

# Frontend URL (REQUIRED for CORS in production)
# Set to your Vercel deployment URL (e.g., https://your-app.vercel.app)
FRONTEND_URL=http://localhost:3000

# Authentication (REQUIRED)
# Generate: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# OpenAI (optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Storage
STORAGE_PATH=./storage/uploads
MAX_UPLOAD_SIZE=52428800

# Session (REQUIRED)
# Generate: openssl rand -base64 32
SESSION_SECRET=your-session-secret-change-this-minimum-32-characters

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Environment
NODE_ENV=development
APP_ENV=development
APP_VERSION=0.4.0
APP_NAME=RentOrgin

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
