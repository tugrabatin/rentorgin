{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@rentorgin/core-domain": ["packages/core-domain/src"],
      "@rentorgin/ui-components": ["packages/ui-components/src"],
      "@rentorgin/shared-utils": ["packages/shared-utils/src"],
      "@rentorgin/database": ["packages/database/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}



















